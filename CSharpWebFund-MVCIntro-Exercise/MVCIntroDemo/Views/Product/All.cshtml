@using MVCIntroDemo.Models.Product;
@model IEnumerable<ProductViewModel>

@{
	ViewBag.Title = "All Products";
}

<div class="container-fluid">
	<div class="row row-cols-5">
		<form asp-controller="Product" asp-action="All" method="get">
			<div class="input-group">
				<input type="search" name="keyword" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
				<button type="sumbit" class="btn btn-outline-primary" data-mdb-ripple-init>search</button>
			</div>
		</form>
	</div>
	<div class="row">
		<div class="card" style="width: 18rem;">
			<div class="card-header">@ViewBag.Title</div>
			<ul class="list-group list-group-flush">
				@foreach (var product in Model)
				{
					<li class="list-group-item">
						<a asp-controller="Product" asp-action="ById" asp-route-Id="@product.Id">@product.Name - @product.Price lv.</a>
					</li>
				}
			</ul>
		</div>

		<div class="row row-cols-5">
			<a class="btn btn-primary" asp-controller="Product" asp-action="DownloadProductsInfo">DownloadProduct</a>
		</div>
	</div>
</div>
